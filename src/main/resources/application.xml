<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
	        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="ru.seet61.spring" />

    <bean id="client" class="ru.seet61.spring.client.Client" >
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="ru.seet61.spring.logger.ConsoleEventLogger" />

    <bean id="fileLogger" class="ru.seet61.spring.logger.FileEventLogger" init-method="init">
        <constructor-arg value="application.log"/>
    </bean>
    
    <bean id="cacheFileLogger" class="ru.seet61.spring.logger.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg value="5"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance" />

    <bean id="event" class="ru.seet61.spring.event.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date" />
        </constructor-arg>
        <constructor-arg ref="dateFormat" />
    </bean>

    <bean id="app" class="ru.seet61.spring.App" >
        <constructor-arg index="0" ref="client"/>
        <constructor-arg index="1" ref="eventLogger"/>
    </bean>
</beans>